<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.bean.UsersMapper">
	
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache">
	</cache>
	
	<!-- 根据用户名和密码查询用户 -->
	<select id="getUserByLogin" resultType="Users" parameterType="Users">
		select * from users where uname = #{uname} and upwd = #{upwd}
	</select>
	<!-- 添加用户 -->
	<insert id="saveUser" parameterType="Users" useGeneratedKeys="true" keyProperty="uid">
		insert into users(uname,upwd,entrytime,tel,email,qq,birthday,address,
		)values(#{uname},#{upwd},#{entrytime},#{tel},#{email},#{qq},#{birthday}
		,#{address})
		
	</insert>
	
	<!-- 查询所有的用户 -->
	<select id="findAllUsersCondition" resultType="Users" parameterType="Users">
		select * from users where 1=1
	</select>
	
	

	<!-- 查询用户的数量-->
	<select id="findAllUsersConditionCount" resultType="int" parameterType="Users">
		select count(*) from users where 1=1
	</select>
</mapper>