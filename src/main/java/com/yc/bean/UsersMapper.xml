<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.bean.UsersMapper">
	
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache">
	</cache>
	
	<!-- 根据用户名和密码查询用户 -->
	<select id="getUserByLogin" resultType="Users" parameterType="Users">
		select * from users where uname = #{uname} and upwd = #{upwd}
	</select>
	
	<!-- 根据gid和did查询用户 -->
	<select id="getUserBygidanddid" resultType="Users" parameterType="Map">
		select * from users where gid = #{gid} and did = #{did}
	</select>
	
	
	
	

</mapper>